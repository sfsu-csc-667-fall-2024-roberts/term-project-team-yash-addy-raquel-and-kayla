<!doctype html>
<html lang="en">
<%- include ('../partials/head') %>
<body class="text-[12px]">
<div class="container mx-auto">
  <%- include('../partials/menu') %>
  <section>
    <div class="flex flex-row">
      <section class="basis-4/6 mr-[20px]">
        <h2 class="text-2xl font-bold mb-4">Lobby for Game <%= gameId %></h2>
        <div id="available-players" class="mb-4">
          <h3 class="text-xl">Players:</h3>
          <ul>
            <% gameState.players.forEach(player => { %>
              <li><%= player.username %> (<%= player.color %>)</li>
            <% }); %>
          </ul>
        </div>
        <div id="chat-section" class="h-[300px] flex flex-col">
          <ul id="messages" class="rounded-md border-[1px] border-gray-300 w-full grow p-[4px] overflow-y-auto"></ul>
          <form method="post" class="flex flex-row h-[20px] mt-[8px]">
            <input id="chat-message" autocomplete="off" placeholder="Type your message here" class="border-[1px] border-gray-300 mr-[4px] block grow rounded-sm text-[10px] px-1" />
            <button class="w-[30px] text-[8px] bg-blue-200 rounded-sm px-1">Send</button>
          </form>
        </div>
      </section>
      <div class="basis-2/6"><%- include('../partials/chat') %></div>
    </div>
  </section>

  <%- include('../partials/footer') %>
  <script src="/js/game-lobby.js"></script>
</div>
</body>
</html>